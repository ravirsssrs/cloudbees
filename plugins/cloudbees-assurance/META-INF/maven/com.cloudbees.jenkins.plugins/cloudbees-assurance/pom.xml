<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.cloudbees.jenkins.plugins</groupId>
    <artifactId>jenkins-plugins</artifactId>
    <version>70</version>
    <relativePath />
  </parent>

  <artifactId>cloudbees-assurance</artifactId>
  <version>2.138.0.10</version>
  <packaging>hpi</packaging>

  <properties>
    <jenkins.version>2.176.1-cb-2</jenkins.version>
    <cb.version>2.176.1.3</cb.version>
    <java.level>8</java.level>
    <hpi-plugin.version>2.2</hpi-plugin.version>
    <jenkins-test-harness.version>2.31</jenkins-test-harness.version>
    <cjp-im.version>2.89.0.10</cjp-im.version>
    <bklibs.version>2.0.7</bklibs.version>
    <powermock.version>1.6.4</powermock.version>

    <!-- HttpTransporterFactory not available in newer versions and we need it -->
    <aetherVersion>1.0.2.v20150114</aetherVersion>
  </properties>

  <name>Beekeeper Upgrade Assistant Plugin</name>
  <description>A plugin that provides support to keep CJP instances inside the envelope</description>
  <url>https://release-notes.cloudbees.com/product/CloudBees+Assurance+Plugin</url>

  <scm>
    <connection>scm:git:ssh://git@github.com/cloudbees/${project.artifactId}-plugin.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/cloudbees/${project.artifactId}-plugin.git</developerConnection>
    <tag>cloudbees-assurance-2.138.0.10</tag>
  </scm>

  <dependencies>
    <!-- Plugin dependencies  -->
    <dependency>
      <groupId>com.cloudbees.nectar.plugins</groupId>
      <artifactId>nectar-license</artifactId>
      <version>8.10</version>
    </dependency>
    <dependency>
      <groupId>org.jenkins-ci.plugins</groupId>
      <artifactId>support-core</artifactId>
      <version>2.44</version>
    </dependency>

    <!-- Plugin transitive dependencies  -->
    <dependency>
      <groupId>com.cloudbees.nectar.plugins</groupId>
      <artifactId>cloudbees-license</artifactId>
      <version>9.18</version>
    </dependency>
    <dependency>
      <groupId>org.jenkins-ci.plugins</groupId>
      <artifactId>async-http-client</artifactId>
      <version>1.7.24.1</version>
    </dependency>
    <dependency>
      <groupId>org.jenkins-ci.plugins</groupId>
      <artifactId>credentials</artifactId>
      <version>2.1.16</version>
    </dependency>
    <dependency>
      <groupId>org.jenkins-ci.plugins</groupId>
      <artifactId>jackson2-api</artifactId>
      <version>2.8.10.1</version>
    </dependency>
    <dependency>
      <groupId>org.jenkins-ci.plugins</groupId>
      <artifactId>metrics</artifactId>
      <version>3.1.2.10</version>
      <optional>true</optional>
    </dependency>

    <!-- Other dependencies  -->
    <dependency>
      <groupId>com.cloudbees.jenkins.modules</groupId>
      <artifactId>cloudbees-installation-manager</artifactId>
      <version>${cjp-im.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.cloudbees.beekeeper</groupId>
      <artifactId>envelope-data</artifactId>
      <version>${bklibs.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-artifact</artifactId>
      <version>3.5.2</version>
    </dependency>

    <!-- Aether dependencies to download from remote repos -->
    <dependency>
        <groupId>org.eclipse.aether</groupId>
        <artifactId>aether-connector-basic</artifactId>
        <version>${aetherVersion}</version>
    </dependency>
    <dependency>
        <groupId>org.eclipse.aether</groupId>
        <artifactId>aether-transport-file</artifactId>
        <version>${aetherVersion}</version>
    </dependency>
    <dependency>
        <groupId>org.eclipse.aether</groupId>
        <artifactId>aether-transport-http</artifactId>
        <version>${aetherVersion}</version>
        <exclusions>
          <exclusion>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
          </exclusion>
        </exclusions>
    </dependency>
    <dependency>
      <groupId>org.jenkins-ci.plugins</groupId>
      <artifactId>apache-httpcomponents-client-4-api</artifactId>
      <version>4.5.5-3.0</version>
    </dependency>
    <dependency>
        <groupId>org.apache.maven</groupId>
        <artifactId>maven-aether-provider</artifactId>
        <version>3.3.9</version>
    </dependency>

    <!-- Test dependencies.  -->
    <dependency>
      <groupId>com.cloudbees.jenkins.modules</groupId>
      <artifactId>cloudbees-installation-manager</artifactId>
      <version>${cjp-im.version}</version>
      <classifier>tests</classifier>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.cloudbees.beekeeper</groupId>
      <artifactId>envelope-data</artifactId>
      <version>${bklibs.version}</version>
      <classifier>tests</classifier>
      <scope>test</scope>
    </dependency>
    <!-- For some reason it is appearing in the compile scope (comes from JTH).  -->
    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>annotations</artifactId>
      <version>3.0.1</version>
    </dependency>
    <dependency>
      <groupId>com.github.stephenc.findbugs</groupId>
      <artifactId>findbugs-annotations</artifactId>
      <version>1.3.9-1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.github.tomakehurst</groupId>
      <artifactId>wiremock-standalone</artifactId>
      <version>2.16.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.powermock</groupId>
      <artifactId>powermock-module-junit4</artifactId>
      <version>${powermock.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.powermock</groupId>
      <artifactId>powermock-api-mockito</artifactId>
      <version>${powermock.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.cloudbees.jenkins.modules</groupId>
      <artifactId>cloudbees-installation-manager</artifactId>
      <version>${cjp-im.version}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
